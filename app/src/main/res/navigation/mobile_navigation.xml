<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/nav_home">

    <fragment
        android:id="@+id/nav_home"
        android:name="com.galio.heydrink.ui.home.HomeFragment"
        android:label="@string/menu_home"
        tools:layout="@layout/fragment_home" >
        <action
            android:id="@+id/action_nav_home_to_nav_customer_select_store"
            app:destination="@id/nav_customer_select_store" />
    </fragment>

    <fragment
        android:id="@+id/nav_customer_select_store"
        android:name="com.galio.heydrink.ui.customer.SelectStoreFragment"
        android:label="@string/customer_select_store"
        tools:layout="@layout/customer_select_store" >
        <action
            android:id="@+id/action_nav_customer_select_store_to_nav_customer_select_menu"
            app:destination="@id/navigation" />
    </fragment>

    <fragment
        android:id="@+id/customerMenuDetailFragment"
        android:name="com.galio.heydrink.ui.customer.MenuDetail"
        android:label="customer_menu_detail_fragment"
        tools:layout="@layout/customer_menu_detail" >
        <action
            android:id="@+id/action_customerMenuDetailFragment_to_navigation"
            app:destination="@id/navigation"
            app:popUpTo="@id/navigation"
            app:popUpToInclusive="true" />
    </fragment>

    <navigation android:id="@+id/navigation"
        app:startDestination="@id/nav_customer_select_menu">
        <fragment
            android:id="@+id/storeInfoFragment"
            android:name="com.galio.heydrink.ui.customer.StoreInfoFragment"
            android:label="customer_store_info"
            tools:layout="@layout/customer_store_info" />
        <fragment
            android:id="@+id/storeMenuFragment"
            android:name="com.galio.heydrink.ui.customer.StoreMenuFragment"
            android:label="StoreMenuFragment" />
        <fragment
            android:id="@+id/nav_customer_select_menu"
            android:name="com.galio.heydrink.ui.customer.SelectMenuFragment"
            android:label="@string/customer_select_menu"
            tools:layout="@layout/customer_select_menu">
            <action
                android:id="@+id/action_nav_customer_select_menu_to_customerMenuDetailFragment"
                app:destination="@id/customerMenuDetailFragment" />
        </fragment>
        <action
            android:id="@+id/action_global_customer_order"
            app:destination="@id/customer_order" />
    </navigation>
    <fragment
        android:id="@+id/customer_order"
        android:name="com.galio.heydrink.ui.customer.OrderFragment"
        android:label="customer_order"
        tools:layout="@layout/customer_order" >
        <action
            android:id="@+id/action_customer_order_to_customer_payment"
            app:destination="@id/customer_payment" />
    </fragment>
    <fragment
        android:id="@+id/customer_payment"
        android:name="com.galio.heydrink.ui.customer.Payment"
        android:label="fragment_customer_payment"
        tools:layout="@layout/fragment_customer_payment" >
        <action
            android:id="@+id/action_customer_payment_to_customer_order_finish"
            app:destination="@id/customer_order_finish" />
    </fragment>
    <fragment
        android:id="@+id/customer_order_finish"
        android:name="com.galio.heydrink.ui.customer.Order_finish"
        android:label="fragment_customer_order_finish"
        tools:layout="@layout/fragment_customer_order_finish" >
        <action
            android:id="@+id/action_customer_order_finish_to_nav_home"
            app:destination="@id/nav_home"
            app:popUpTo="@id/nav_home"
            app:popUpToInclusive="true" />
    </fragment>
</navigation>