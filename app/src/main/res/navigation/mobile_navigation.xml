<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/nav_home">

    <fragment
        android:id="@+id/nav_home"
        android:name="com.galio.heydrink.ui.home.HomeFragment"
        android:label="@string/menu_home"
        tools:layout="@layout/fragment_home" >
        <action
            android:id="@+id/action_nav_home_to_nav_customer_select_store"
            app:destination="@id/nav_customer_select_store" />
    </fragment>

    <fragment
        android:id="@+id/nav_customer_select_store"
        android:name="com.galio.heydrink.ui.customer.SelectStoreFragment"
        android:label="@string/customer_select_store"
        tools:layout="@layout/customer_select_store" >
        <action
            android:id="@+id/action_nav_customer_select_store_to_nav_customer_select_menu"
            app:destination="@id/nav_customer_select_menu" />
    </fragment>

    <fragment
        android:id="@+id/nav_customer_select_menu"
        android:name="com.galio.heydrink.ui.customer.SelectMenuFragment"
        android:label="@string/customer_select_menu"
        tools:layout="@layout/fragment_select_menu" />
</navigation>