<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/layout_whole"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:padding="10dp"
    android:background="@drawable/deliverinfo_background_selector"
    android:layout_marginBottom="10dp">

    <RelativeLayout
        android:id="@+id/layout_food"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:paddingHorizontal="20dp"
        android:paddingVertical="13dp">

        <LinearLayout
            android:layout_centerVertical="true"
            android:layout_width="200dp"
            android:weightSum="3"
            android:layout_height="match_parent">
            <TextView
                android:layout_gravity="center"
                android:id="@+id/drink_name"
                android:layout_width="0dp"
                android:layout_weight="2"
                android:layout_height="wrap_content"
                android:includeFontPadding="false"
                android:text="아이스아메리카노"
                android:textSize="15dp"
                android:textColor="@android:color/black"
                android:textStyle="bold"/>
            <TextView
                android:layout_gravity="center"
                android:id="@+id/drink_price"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:includeFontPadding="false"
                android:text="1500원"
                android:textSize="15dp"
                android:textColor="@android:color/black"
                android:textStyle="bold"/>
        </LinearLayout>


        <LinearLayout
            android:id="@+id/layio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_margin="9dp"
            android:gravity="center_vertical"
            android:background="#FFFFFF"
            android:orientation="horizontal"
            android:layout_alignParentRight="true">
            <androidx.cardview.widget.CardView
                android:id="@+id/less"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#000000"
                android:foreground="?android:attr/selectableItemBackground"
                app:cardBackgroundColor="#FFFFFF"
                app:cardCornerRadius="5dp"
                app:cardElevation="4dp">
                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:layout_margin="4dp"
                    android:background="@drawable/minus" />
            </androidx.cardview.widget.CardView>
            <TextView
                android:id="@+id/prnumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:paddingHorizontal="15dp"
                android:text="0"
                android:textSize="16sp"
                android:textColor="@android:color/black" />
            <androidx.cardview.widget.CardView
                android:id="@+id/more"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#000000"
                android:foreground="?android:attr/selectableItemBackground"
                app:cardBackgroundColor="#FFFFFF"
                app:cardCornerRadius="30dp"
                app:cardElevation="4dp">
                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:layout_margin="4dp"
                    android:background="@drawable/plus" />
            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginBottom="5dp"
        android:id="@+id/hideRecyclerView"
        android:layout_below="@id/layout_food">
        <LinearLayout
            android:id="@+id/options1"
            android:orientation="horizontal"
            android:weightSum="4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:visibility="gone"
                android:layout_weight="1"
                android:id="@+id/relative1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <CheckBox
                    android:id="@+id/option1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                </CheckBox>
                <TextView
                    android:id="@+id/option1text"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/option1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="hi">
                </TextView>
            </RelativeLayout>
            <RelativeLayout
                android:visibility="gone"

                android:id="@+id/relative2"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <CheckBox
                    android:id="@+id/option2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                </CheckBox>
                <TextView
                    android:id="@+id/option2text"

                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/option2"

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="hi">
                </TextView>
            </RelativeLayout>
            <RelativeLayout
                android:visibility="gone"

                android:id="@+id/relative3"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <CheckBox
                    android:id="@+id/option3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                </CheckBox>
                <TextView
                    android:id="@+id/option3text"

                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/option3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="hi">
                </TextView>
            </RelativeLayout>
            <RelativeLayout
                android:visibility="gone"

                android:id="@+id/relative4"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <CheckBox
                    android:id="@+id/option4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                </CheckBox>
                <TextView
                    android:id="@+id/option4text"

                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/option4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="hi">
                </TextView>
            </RelativeLayout>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/options2"
            android:weightSum="4"
            android:layout_below="@+id/options1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:visibility="gone"

                android:id="@+id/relative5"
                android:layout_weight="1"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <CheckBox
                    android:id="@+id/option5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                </CheckBox>
                <TextView
                    android:id="@+id/option5text"

                    android:layout_centerVertical="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/option5"

                    android:text="hi">
                </TextView>
            </RelativeLayout>
            <RelativeLayout
                android:visibility="gone"

                android:id="@+id/relative6"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <CheckBox
                    android:id="@+id/option6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                </CheckBox>
                <TextView
                    android:id="@+id/option6text"

                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/option6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="hi">
                </TextView>
            </RelativeLayout>
            <RelativeLayout
                android:visibility="gone"

                android:id="@+id/relative7"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <CheckBox
                    android:id="@+id/option7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                </CheckBox>
                <TextView
                    android:id="@+id/option7text"

                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/option7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="hi">
                </TextView>
            </RelativeLayout>
            <RelativeLayout
                android:visibility="gone"

                android:id="@+id/relative8"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <CheckBox
                    android:id="@+id/option8"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                </CheckBox>
                <TextView
                    android:id="@+id/option8text"

                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/option8"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="hi">
                </TextView>
            </RelativeLayout>
        </LinearLayout>

    </RelativeLayout>


</RelativeLayout>