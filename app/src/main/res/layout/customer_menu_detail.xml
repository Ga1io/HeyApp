<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.customer.MenuDetail">

    <ImageView
        android:id="@+id/menuImg"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:scaleType="fitXY"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        tools:src="@tools:sample/avatars" />

    <TextView
        android:id="@+id/menuName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/menuImg"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:textSize="20sp"
        android:textColor="#000000"
        android:maxLines="1"
        android:ellipsize="end"
        android:text="TextView" />

    <TextView
        android:id="@+id/menuInfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/menuName"
        android:layout_centerHorizontal="true"
        android:maxLines="3"
        android:ellipsize="end"
        android:layout_marginTop="20dp"
        android:textSize="17sp"
        android:text="TextView" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="10dp"
        android:layout_above="@id/orderBtn"
        android:layout_below="@id/menuInfo">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/optionScrollLinearLayout"
            android:orientation="vertical" />
    </ScrollView>

    <ImageButton
        android:id="@+id/orderBtn"
        android:layout_width="wrap_content"
        android:layout_height="70dp"
        android:src="@drawable/add_cart"
        android:scaleType="fitXY"
        android:background="@android:color/transparent"
        android:layout_alignParentBottom="true"/>
</RelativeLayout>