<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/customerItemRecyclerView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/boarder"
    android:padding="10dp">

    <ImageView
        android:id="@+id/person"
        android:layout_width="25dp"
        android:layout_height="45dp"
        android:layout_alignBottom="@id/dest1"
        android:background="@android:color/transparent"
        android:scaleType="fitXY"
        app:srcCompat="@drawable/walking_man" />

    <ImageView
        android:id="@+id/dest1"
        android:layout_width="50dp"
        android:layout_height="70dp"
        android:layout_centerHorizontal="true"
        android:background="@android:color/transparent"
        android:scaleType="fitXY" />

    <TextView
        android:id="@+id/dest1Name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@id/dest1"
        android:layout_alignTop="@id/dest1"
        android:layout_alignEnd="@id/dest1"
        android:layout_alignBottom="@id/dest1"
        android:gravity="center_vertical|center_horizontal"
        android:text="208"
        android:ellipsize="end"
        android:maxLines="1"
        android:textSize="@dimen/customerItem_View_text_size"
        android:textColor="@android:color/black"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/dest2"
        android:layout_width="50dp"
        android:layout_height="70dp"
        android:layout_alignParentRight="true"
        android:background="@android:color/transparent"
        android:scaleType="fitXY"/>

    <TextView
        android:id="@+id/dest2Name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@id/dest2"
        android:layout_alignTop="@id/dest2"
        android:layout_alignEnd="@id/dest2"
        android:layout_alignBottom="@id/dest2"
        android:gravity="center_vertical|center_horizontal"
        android:text="310"
        android:ellipsize="end"
        android:maxLines="1"
        android:textSize="@dimen/customerItem_View_text_size"
        android:textColor="@android:color/black"
        android:textStyle="bold" />

    <View
        android:layout_width="match_parent"
        android:layout_height="2px"
        android:layout_below="@id/dest1"
        android:background="#BDBDBD" />

    <TextView
        android:id="@+id/dest1Time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/dest1"
        android:layout_alignLeft="@id/dest1"
        android:layout_alignRight="@id/dest1"
        android:gravity="center_horizontal"
        android:text="09:15" />

    <TextView
        android:id="@+id/dest2Time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/dest2"
        android:layout_alignLeft="@id/dest2"
        android:layout_alignRight="@id/dest2"
        android:gravity="center_horizontal"
        android:text="09:18" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/hide_height"
        android:id="@+id/hideRecyclerView"
        android:layout_below="@id/dest1Time">

        <ImageView
            android:id="@+id/avater"
            android:layout_width="@dimen/customerItem_info_height"
            android:layout_height="@dimen/customerItem_info_height"
            android:layout_weight="1"
            android:scaleType="fitXY"
            app:srcCompat="@drawable/default_profile" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/customerItem_info_height"
            android:layout_weight="1"
            android:layout_toRightOf="@id/avater"
            android:layout_marginLeft="25dp"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView2"
                android:layout_width="match_parent"
                android:layout_height="31dp"
                android:text="박동훈"
                android:textSize="@dimen/customerItem_info_text_size"
                android:textColor="#000000"/>

            <RatingBar
                android:id="@+id/ratingBar"
                android:layout_width="wrap_content"
                android:layout_height="31dp"
                style="?android:attr/ratingBarStyleIndicator"
                android:theme="@style/RatingBar"
                android:numStars="5"
                android:rating="2.5"
                android:stepSize="0.5"
                android:isIndicator="true"/>


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageView4"
                    android:layout_width="@dimen/customerItem_cup_size"
                    android:layout_height="@dimen/customerItem_cup_size"
                    android:layout_marginLeft="@dimen/customerItem_left_margin"
                    android:layout_weight="1"
                    app:srcCompat="@drawable/full_cup" />

                <ImageView
                    android:id="@+id/imageView5"
                    android:layout_width="@dimen/customerItem_cup_size"
                    android:layout_height="@dimen/customerItem_cup_size"
                    android:layout_weight="1"
                    android:layout_marginLeft="@dimen/customerItem_left_margin"
                    app:srcCompat="@drawable/full_cup" />

                <ImageView
                    android:id="@+id/imageView6"
                    android:layout_width="@dimen/customerItem_cup_size"
                    android:layout_height="@dimen/customerItem_cup_size"
                    android:layout_marginLeft="@dimen/customerItem_left_margin"
                    android:layout_weight="1"
                    app:srcCompat="@drawable/empty_cup" />

                <ImageView
                    android:id="@+id/imageView7"
                    android:layout_width="@dimen/customerItem_cup_size"
                    android:layout_height="@dimen/customerItem_cup_size"
                    android:layout_marginLeft="@dimen/customerItem_left_margin"
                    android:layout_weight="1"
                    app:srcCompat="@drawable/empty_cup" />

                <ImageView
                    android:id="@+id/imageView8"
                    android:layout_width="@dimen/customerItem_cup_size"
                    android:layout_height="@dimen/customerItem_cup_size"
                    android:layout_marginLeft="@dimen/customerItem_left_margin"
                    android:layout_weight="1"
                    app:srcCompat="@drawable/empty_cup" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="31dp"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/customerItem_info_text_size"
                    android:textColor="#000000"
                    android:text="주문 마감  " />

                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/customerItem_info_text_size"
                    android:textColor="@android:color/holo_blue_dark"
                    android:text="13:23" />
            </LinearLayout>

        </LinearLayout>

        <RelativeLayout
            android:layout_below="@id/avater"
            android:layout_width="match_parent"
            android:layout_height="@dimen/customerItem_info_height"
            android:layout_marginTop="10dp"
            android:id="@+id/infoRelativeLayout">

            <TextView
                android:id="@+id/detailInfo"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="세부 사항들\n가나다라마바\n아메리카노"
                android:textSize="@dimen/customerItem_info_text_size"
                android:maxLines="4"
                android:ellipsize="end"
                android:textColor="#000000"/>
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/customerItem_btn_height"
            android:layout_below="@id/infoRelativeLayout"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/orderBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:scaleType="fitXY"
                android:background="@android:color/transparent"
                app:srcCompat="@drawable/customer_item_order_btn" />

            <ImageButton
                android:id="@+id/foldBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:scaleType="fitXY"
                android:background="@android:color/transparent"
                app:srcCompat="@drawable/customer_item_fold_btn" />
        </LinearLayout>
    </RelativeLayout>

</RelativeLayout>
