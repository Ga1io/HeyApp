<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/customerItemRecyclerView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/deliverinfo_background_selector"
    android:layout_marginBottom="10dp"
    android:padding="10dp">



    <LinearLayout
        android:id="@+id/train"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="30dp">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true">
                <TextView
                    android:layout_marginHorizontal="5dp"
                    android:layout_width="wrap_content"
                    android:textSize="10dp"
                    android:text="10분 후 출발"
                    android:layout_height="wrap_content">
                </TextView>
                <ImageView
                    android:id="@+id/clock"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:background="@drawable/clock">
                </ImageView>
            </LinearLayout>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:layout_alignParentBottom="true"
                android:layout_width="wrap_content"
                android:background="@drawable/dblack"
                android:layout_height="3dp">
            </RelativeLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:weightSum="20"
                android:layout_height="120dp">
                <RelativeLayout
                    android:layout_weight="4"
                    android:layout_width="0dp"
                    android:layout_height="match_parent">
                    <ImageView
                        android:layout_width="90dp"
                        android:layout_alignParentBottom="true"
                        android:id="@+id/traintype"
                        android:background="@drawable/train1"
                        android:layout_height="30dp">
                    </ImageView>
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1">
                </RelativeLayout>
                <RelativeLayout
                    android:layout_weight="4"
                    android:layout_width="0dp"
                    android:layout_margin="5dp"
                    android:layout_height="80dp"
                    android:id="@+id/first"
                    android:background="@drawable/green">
                    <TextView
                        android:id="@+id/first_dest"
                        android:layout_centerInParent="true"
                        android:layout_width="wrap_content"
                        android:text="목적지1"
                        android:layout_height="wrap_content">
                    </TextView>
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1">
                </RelativeLayout>
                <RelativeLayout
                    android:layout_weight="4"
                    android:layout_width="0dp"
                    android:layout_margin="5dp"
                    android:layout_height="80dp"
                    android:id="@+id/second"
                    android:background="@drawable/blue">
                    <TextView
                        android:id="@+id/second_dest"
                        android:layout_centerInParent="true"
                        android:layout_width="wrap_content"
                        android:text="목적지2"
                        android:layout_height="wrap_content">
                    </TextView>
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1">
                </RelativeLayout>
                <RelativeLayout
                    android:layout_weight="4"
                    android:layout_width="0dp"
                    android:layout_margin="5dp"
                    android:layout_height="80dp"
                    android:id="@+id/third"
                    android:background="@drawable/red">
                    <TextView
                        android:id="@+id/third_dest"
                        android:layout_centerInParent="true"
                        android:layout_width="wrap_content"
                        android:text="목적지3"
                        android:layout_height="wrap_content">
                    </TextView>
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1">
                </RelativeLayout>
            </LinearLayout>

        </RelativeLayout>

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:id="@+id/hideRecyclerView"
        android:layout_below="@id/train">

        <ImageView
            android:id="@+id/avater"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_weight="1"
            android:scaleType="fitXY"
            app:srcCompat="@drawable/default_profile" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_toRightOf="@id/avater"
            android:layout_marginLeft="25dp"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <TextView
                android:id="@+id/deliverName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="박동훈"
                android:textSize="15dp"
                android:textColor="#000000"/>

            <RatingBar
                android:id="@+id/deliverStar"
                android:layout_width="wrap_content"
                android:layout_height="31dp"
                style="?android:attr/ratingBarStyleIndicator"
                android:theme="@style/RatingBar"
                android:numStars="5"
                android:rating="2.5"
                android:stepSize="0.5"
                android:layout_marginVertical="5dp"
                android:isIndicator="true"/>


            <RatingBar
                android:id="@+id/deliverCups"

                style="@style/cup"
                android:layout_width="wrap_content"
                android:layout_height="41dp"
                android:theme="@style/Widget.AppCompat.RatingBar.Small"
                android:numStars="5"
                android:rating="3"
                android:stepSize="1"
                android:isIndicator="true"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="31dp"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="15dp"
                    android:textColor="#000000"
                    android:text="주문 마감  " />

                <TextView
                    android:id="@+id/time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="15dp"
                    android:textColor="@android:color/holo_blue_dark"
                    android:text="13:23" />
            </LinearLayout>

        </LinearLayout>

        <RelativeLayout
            android:layout_below="@id/avater"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_marginTop="10dp"
            android:id="@+id/infoRelativeLayout">
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/detailInfo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:maxLines="4"
                    android:text="카페 Picks!!"
                    android:textColor="#000000"
                    android:textSize="15dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.0" />

                <RelativeLayout
                    android:id="@+id/linearLayout2"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/detailInfo"
                    android:orientation="horizontal">
                    <ImageView
                        android:layout_centerVertical="true"
                        android:layout_alignParentLeft="true"
                        android:layout_width="100dp"
                        android:background="@drawable/starbucks"
                        android:layout_height="100dp">
                    </ImageView>
                    <ImageView
                        android:layout_centerVertical="true"
                        android:layout_centerInParent="true"
                        android:layout_width="100dp"
                        android:background="@drawable/coffeenamu"
                        android:layout_height="100dp">
                    </ImageView>
                    <ImageView
                        android:layout_centerVertical="true"
                        android:layout_alignParentRight="true"
                        android:layout_width="100dp"
                        android:background="@drawable/coffeebin"
                        android:layout_height="100dp">
                    </ImageView>
                </RelativeLayout>
            </androidx.constraintlayout.widget.ConstraintLayout>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/infoRelativeLayout"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/orderBtn"
                android:layout_width="200dp"
                android:layout_centerHorizontal="true"
                android:layout_height="wrap_content"
                android:scaleType="fitXY"
                android:background="@android:color/transparent"
                app:srcCompat="@drawable/customer_item_order_btn" />


        </RelativeLayout>
    </RelativeLayout>

</RelativeLayout>
