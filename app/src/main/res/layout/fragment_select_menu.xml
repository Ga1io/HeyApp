<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.customer.SelectMenuFragment">

    <ImageView
        android:id="@+id/storeIcon"
        android:layout_width="@dimen/customerItem_info_height"
        android:layout_height="@dimen/customerItem_info_height"
        android:layout_weight="1"
        android:scaleType="fitXY"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/customerItem_info_height"
        android:layout_marginLeft="20dp"
        android:layout_toRightOf="@id/storeIcon"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <TextView
            android:id="@+id/storeName"
            android:layout_width="match_parent"
            android:layout_height="31dp"
            android:text="맥도날드"
            android:textColor="#000000"
            android:textSize="@dimen/customerItem_info_text_size" />

        <RatingBar
            android:id="@+id/ratingBar"
            style="?android:attr/ratingBarStyleIndicator"
            android:layout_width="wrap_content"
            android:layout_height="31dp"
            android:isIndicator="true"
            android:numStars="5"
            android:rating="2.5"
            android:stepSize="0.5"
            android:theme="@style/RatingBar" />

        <TextView
            android:id="@+id/storeLocation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:maxLines="1"
            android:ellipsize="end"
            android:layout_marginTop="10dp"
            android:text="대구시 수성구 지산로32 1209" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_below="@id/storeIcon"
        android:orientation="horizontal"
        android:id="@+id/linearLayout">

        <TextView
            android:id="@+id/menuTextView"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textSize="@dimen/customerItem_info_text_size"
            android:textColor="#000000"
            android:gravity="center"
            android:background="@drawable/boarder"
            android:text="메뉴"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/infoTextView"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textSize="@dimen/customerItem_info_text_size"
            android:gravity="center"
            android:textColor="#000000"
            android:background="@drawable/boarder"
            android:text="정보"
            android:layout_weight="1" />
    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/linearLayout"
        android:id="@+id/menuFragment"/>
</RelativeLayout>